@page
@model Shop_Demo.Pages.Item.CreateModel

@{
    ViewData["Title"] = "Create Item";
}

<div class="row">
    <div class="col">
        <h3 class="text-center">New Catalogue Item</h3>
    </div>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-4">

        <div class="card mt-5 pt-5 pb-5">
            <div class="card-body text-center">

                <form enctype="multipart/form-data" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-row d-flex justify-content-center">
                        <label asp-for="Item.Name"></label>
                        <input asp-for="Item.Name" class="form-control" />
                    </div>

                    <div class="form-row d-flex justify-content-center">
                        <label asp-for="Item.Description"></label>
                        <input asp-for="Item.Description" class="form-control" />
                    </div>

                    <div class="form-row d-flex justify-content-center">
                        <label asp-for="Item.Price"></label>
                        <input asp-for="Item.Price" class="form-control" />
                    </div>

                    <div class="form-row d-flex justify-content-center">
                        <input asp-for="Item.FileUploaded" type="file">
                        <span asp-validation-for="Item.FileUploaded"></span>
                    </div>

                    <hr class="mt-5" />

                    <div class="form-inline d-flex justify-content-center">
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-secondary btn-sm">Annulla</a>
                        <input type="submit" value="Create" class="btn btn-success btn-sm ml-3" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}