@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>

<div class="container">

    @if (Model.Handler != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <div class="row d-flex justify-content-center">
                <div class="col-auto">
                    <svg class="bi flex-shrink-0 me-2" width="20" height="20" role="img" aria-label="Attention!"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    <strong>@Model.Handler</strong>
                </div>
                <div class="col-auto">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }


    <div class="row mt-5">
        @foreach (var item in Model.ItemList)
        {
            <div class="col-auto">
                <div class="card">
                    <img src="@item.ImagePath" class="card-img-top">
                    <div class="card-body text-center">
                        <h5 class="card-title border-bottom pb-1">@item.Name</h5>
                        <p class="fw-bold">€ @item.Price</p>
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <p class="small text-dark-50 fst-italic">itemId: @item.Id</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts
{
<script>
    var alertList = document.querySelectorAll('.alert')
    var alerts =  [].slice.call(alertList).map(function (element) {
        return new bootstrap.Alert(element)
    })
</script>
}
